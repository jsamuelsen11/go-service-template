# EditorConfig - Consistent coding styles across editors and IDEs
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go files - tabs are mandatory per gofmt
[*.go]
indent_style = tab
indent_size = 4
tab_width = 4

# Makefiles - tabs are required for recipes
[Makefile]
indent_style = tab
indent_size = 4
tab_width = 4

[*.mk]
indent_style = tab
indent_size = 4
tab_width = 4

# Taskfile
[Taskfile.yml]
indent_style = space
indent_size = 2

# YAML files
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# TOML files
[*.toml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 120

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
shell_variant = bash
binary_next_line = true
switch_case_indent = true

# Dockerfiles
[Dockerfile*]
indent_style = space
indent_size = 4

[*.dockerfile]
indent_style = space
indent_size = 4

# HTML/CSS/JS (if any frontend files)
[*.{html,htm}]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# Protocol Buffers
[*.proto]
indent_style = space
indent_size = 2

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# GraphQL
[*.{graphql,gql}]
indent_style = space
indent_size = 2

# OpenAPI/Swagger specs
[api/*.{yaml,yml,json}]
indent_style = space
indent_size = 2

# Configuration files
[*.{conf,config,cfg}]
indent_style = space
indent_size = 2

# Environment files
[.env*]
indent_style = space
indent_size = 2

# Git configuration
[.git*]
indent_style = space
indent_size = 2

# GitHub templates and workflows
[.github/**/*]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Terraform/HCL
[*.{tf,tfvars,hcl}]
indent_style = space
indent_size = 2

# Kubernetes manifests
[k8s/**/*.{yaml,yml}]
indent_style = space
indent_size = 2

# Helm charts
[charts/**/*.{yaml,yml}]
indent_style = space
indent_size = 2

# Test fixtures - preserve exact formatting
[testdata/**/*]
trim_trailing_whitespace = false
insert_final_newline = false

[test/fixtures/**/*]
trim_trailing_whitespace = false
insert_final_newline = false

# Generated files - don't modify
[**/generated/**/*]
generated = true

[*_generated.go]
generated = true

[*.pb.go]
generated = true

# Vendored dependencies - don't modify
[vendor/**/*]
generated = true

# Binary/data files - no text processing
[*.{png,jpg,jpeg,gif,ico,svg,woff,woff2,ttf,eot}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
